@model MvcProject.Models.AdvogadoViewModel
@{
    ViewBag.Title = "Editar Advogado";
}

<div class="row">
    <div class="col-md-10 mx-auto">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Editar Advogado</h4>
                <small class="text-muted">Atualize os dados do advogado</small>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <div class="col-md-6">
                         <h5 class="text-primary mb-3">
                                <i class="fas fa-user me-2"></i>
                                Dados Pessoais
                            </h5>
                            <div class="mb-3">
                                <label class="form-label">Nome Completo</label>
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @placeholder = "Digite o nome completo" } })
                                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Senioridade</label>
                                @Html.DropDownListFor(model => model.Senioridade, Model.Senioridades, "Selecione a senioridade", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Senioridade, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                             <h5 class="text-primary mb-3">
                                <i class="fas fa-map-marker-alt me-2"></i>
                                Endereco
                            </h5>
                            
                            <div class="mb-3">
                                <label class="form-label">Logradouro</label>
                                @Html.EditorFor(model => model.Logradouro, new { htmlAttributes = new { @class = "form-control", @placeholder = "Rua, Avenida, etc." } })
                                @Html.ValidationMessageFor(model => model.Logradouro, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Bairro</label>
                                @Html.EditorFor(model => model.Bairro, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nome do bairro" } })
                                @Html.ValidationMessageFor(model => model.Bairro, "", new { @class = "text-danger" })
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Estado</label>
                                        @Html.DropDownListFor(model => model.Estado, Model.Estados, "Selecione o estado", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">CEP</label>
                                        @Html.EditorFor(model => model.Cep, new { htmlAttributes = new { @class = "form-control", @id = "cep", @placeholder = "00000-000" } })
                                        @Html.ValidationMessageFor(model => model.Cep, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Numero</label>
                                        @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @class = "form-control", @id = "numero", @placeholder = "123" } })
                                        @Html.ValidationMessageFor(model => model.Numero, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Complemento</label>
                                        @Html.EditorFor(model => model.Complemento, new { htmlAttributes = new { @class = "form-control", @placeholder = "Apto, Sala, etc." } })
                                        @Html.ValidationMessageFor(model => model.Complemento, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-secondary" })
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Salvar Alteracoes
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/app/AdvogadoViewModel.js"></script>
    <script>
        AdvogadoViewModel_AoCarregarComponente();
    </script>
}