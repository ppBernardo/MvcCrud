@{
    ViewBag.Title = "Página Não Encontrada";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center py-5">
    <div class="mb-4">
        <i class="fas fa-search fa-5x text-muted"></i>
    </div>
    <h1 class="display-1 text-muted mb-3">404</h1>
    <h2 class="mb-3">Página Não Encontrada</h2>
    <p class="text-muted mb-4">
        A página que você está procurando não existe ou foi movida.
    </p>
    <div class="d-flex justify-content-center gap-3">
        @Html.ActionLink("Voltar ao Início", "Index", "Advogado", null, new { @class = "btn btn-primary" })
        @Html.ActionLink("Lista de Advogados", "Index", "Advogado", null, new { @class = "btn btn-secondary" })
    </div>
</div>

<style>
    .display-1 {
        font-size: 8rem;
        font-weight: 700;
        color: var(--gray-300);
    }
    .gap-3 {
        gap: 1rem;
    }
</style>

