@model System.Web.Mvc.HandleErrorInfo
@{
    ViewBag.Title = "Erro no Sistema";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center py-5">
    <div class="mb-4">
        <i class="fas fa-exclamation-triangle fa-5x text-warning"></i>
    </div>
    <h1 class="display-1 text-muted mb-3">Oops!</h1>
    <h2 class="mb-3">Algo deu errado</h2>
    <p class="text-muted mb-4">
        Ocorreu um erro inesperado. Nossa equipe foi notificada e está trabalhando para resolver o problema.
    </p>
    
    @if (Model != null && HttpContext.Current.IsDebuggingEnabled)
    {
        <div class="card mt-4">
            <div class="card-header">
                <h6 class="mb-0">Detalhes do Erro (Modo Debug)</h6>
            </div>
            <div class="card-body text-start">
                <p><strong>Controller:</strong> @Model.ControllerName</p>
                <p><strong>Action:</strong> @Model.ActionName</p>
                <p><strong>Erro:</strong> @Model.Exception.Message</p>
            </div>
        </div>
    }
    
    <div class="d-flex justify-content-center gap-3 mt-4">
        @Html.ActionLink("Voltar ao Início", "Index", "Advogado", null, new { @class = "btn btn-primary" })
        @Html.ActionLink("Tentar Novamente", "Index", "Home", null, new { @class = "btn btn-secondary" })
    </div>
</div>

<style>
    .display-1 {
        font-size: 6rem;
        font-weight: 700;
        color: var(--gray-300);
    }
    .gap-3 {
        gap: 1rem;
    }
</style>